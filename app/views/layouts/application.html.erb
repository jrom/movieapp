<!DOCTYPE html>
<html>
  <head>
    <title>Movies app!</title>
    <%= stylesheet_link_tag "main" %>
  </head>
  <body>
		<div id="user_nav">  
			<% if current_user %>  
			  <%= link_to "Edit profile", edit_user_path(:current) %>  
			  <%= link_to "Logout #{current_user.username}", logout_path %>  
			<% else %>  
			  <%= link_to "Register", new_user_path %>  
			  <%= link_to "Log in", login_path %>  
			<% end %>
		</div>
    <%= yield %>
  </body>
</html>
