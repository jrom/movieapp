<h1><% if @query %>
  Search results for <i><%= h @query %></i>
<% else %>
  All movies
<% end %></h1>

<ol class="movies" style="counter-reset: item <%#= @movies.offset %>">
<% for movie in @movies %>
  <li>
    <dl>
      <dt><%= link_to(title_for_movie(movie), movie) %> <span>(<%= movie.year %>)</span></dt>
      <dd><img src="<%= movie.poster_small_url %>" alt="<%= movie.title %> cover" /></dd>
    </dl>
    
    <ol class="actions">
      <li><a href="#" title="Hey, I watched this!">âœ“</a></li>
      <li><%= link_to '+', add_to_watch_path(:id => movie.id), :title => "To watch..." %></li>
    </ol>
  </li>
<% end %>
</ol>

<%#= will_paginate @movies %>
